<div class="container">
  <%= render("layouts/errors", :object => @station) %>
</div>

<div class="form-group">
  <%= form_for(@station) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <h3>Assign Lines:</h3>
      <%= hidden_field_tag "station[line_ids][]", nil %>
      <% Line.all.each do |station| %>
        <%= check_box_tag "station[line_ids][]", station.id, @station.line_ids.include?(station.id), id: dom_id(station) %>
        <%= label_tag dom_id(station), station.name %><br>
      <% end %>
    </div>
    <%= f.submit(:class => "btn btn-primary btn-xs")%>
  <% end %>
</div>
